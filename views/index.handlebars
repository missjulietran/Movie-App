{{!-- CAROUSEL --}}
<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h2>New <b>Releases</b></h2>
      <div id="myCarousel" class="carousel slide mt-5" data-ride="carousel" data-interval="0">
        <div class="carousel-inner">
          {{#each getNow}}
          <div class="carousel-item {{#if @first}}active{{/if}}">
            <div class="row">
              {{#each this}}
              <div class="col-sm-3">
                <div class="thumb-wrapper">
                  <div class="img-box">
                    <a href="/movie/{{this.id}}">
                      <img src="https://image.tmdb.org/t/p/w342{{this.poster_path}}" class="img-fluid" alt="">
                    </a>
                  </div>
                  <div class="thumb-content">
                    <div class="star-rating">
                      <div class="list-inline">
                        {{this.vote_average}} <i class="fa fa-star"></i>
                      </div>
                    </div>
                    <div class="carousel-title-box">
                      <a href="/movie/{{this.id}}">
                        <h4 class="carousel-title">{{this.title}}</h4>
                      </a>
                    </div>
                    {{#if ../../user}}
                    {{#if this.watchlistCheck}}
                    {{!-- Show watchlist-tick button if true --}}
                    <a href="/watchlist">
                      <button class="index-watchlist-success-style btn" data-movieid={{this.id}}>
                        WATCHLIST<i id={{this.id}} class="fas fa-check"></i>
                      </button>
                    </a>
                    {{else}}
                    {{!-- Else show watchlist-plus button --}}
                    <button class="index-watchlist-add-style watchlist-add-btn btn" data-movieid={{this.id}}>
                      WATCHLIST<i id={{this.id}} class="fas fa-plus"></i>
                    </button>
                    {{/if}}
                    {{/if}}
                  </div>
                </div>
              </div>
              {{/each }}
            </div>
          </div>
          {{/each}}
        </div>
        <!-- Carousel controls -->
        <a class="carousel-control-prev" href="#myCarousel" data-slide="prev">
          <i class="fa fa-angle-left"></i>
        </a>
        <a class="carousel-control-next" href="#myCarousel" data-slide="next">
          <i class="fa fa-angle-right"></i>
        </a>
      </div>
    </div>
  </div>
</div>
